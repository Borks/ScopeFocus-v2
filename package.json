{
	"name": "scopefocus",
	"displayName": "ScopeFocus",
	"description": "Focus only on a part of your code",
	"version": "0.0.1",
	"publisher": "BorkaCodes",
	"icon": "logo.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/Borks/ScopeFocus-v2"
	},
	"engines": {
		"vscode": "^1.38.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.focus"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.focus",
				"title": "ScopeFocus: Activate"
			},
			{
				"command": "extension.defocus",
				"title": "ScopeFocus: Deactivate"
			},
			{
				"command": "extension.focusSelection",
				"title": "Focus this",
				"when": "editorHasSelection"
			},
			{
				"command": "extension.defocusSelection",
				"title": "Defocus this",
				"when": "extension.isFocused && !editorHasSelection"
			}
		],
		"menus": {
			"editor/context": [
				{
					"when": "editorHasSelection",
					"command": "extension.focusSelection"
				},
				{
					"command": "extension.defocusSelection",
					"when": "extension.isFocused && !editorHasSelection"
				}
			]
		},
		"configuration": {
			"title": "ScopeFocus",
			"properties": {
				"scopefocus.focusType": {
					"type": "string",
					"description": "What type of focus should be used.",
					"default": "Line",
					"enum": ["Line", "Scope"]
				},
				"scopefocus.linePadding": {
					"type": "number",
					"description": "How many extra lines should be in focus for line mode.",
					"default": 0,
					"minimum": 0
				},
				"scopefocus.opacity": {
					"type": "number",
					"description": "Opacity for out of focus lines.",
					"default": 0.1,
					"minimum": 0,
					"maximum": 1
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.38.0",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"tslint": "^5.20.0",
		"typescript": "^3.6.3",
		"vscode-test": "^1.2.0"
	}
}
