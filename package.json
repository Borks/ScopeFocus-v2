{
	"name": "scopefocus",
	"displayName": "ScopeFocus",
	"description": "Focus only on a part of your code",
	"version": "0.0.2",
	"publisher": "BorkaCodes",
	"icon": "logo.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/Borks/ScopeFocus-v2"
	},
	"engines": {
		"vscode": "^1.38.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.toggle",
				"title": "Toggle Focus View"
			},
			{
				"command": "extension.focusSelection",
				"title": "Focus Selection",
				"when": "editorHasSelection"
			},
			{
				"command": "extension.defocusSelection",
				"title": "Unfocus Selection",
				"when": "!editorHasSelection"
			},
			{
				"command": "extension.defocusAll",
				"title": "Unfocus All"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "extension.focusSelection",
					"group": "1_scopeFocus@1"
				},
				{
					"command": "extension.defocusSelection",
					"group": "1_scopeFocus@2"
				},
				{
					"command": "extension.defocusAll",
					"group": "1_scopeFocus@3"
				},
				{
					"command": "extension.toggle",
					"group": "1_scopeFocus@4"
				}
			]
		},
		"configuration": {
			"title": "ScopeFocus",
			"properties": {
				"scopefocus.focusType": {
					"type": "string",
					"description": "What type of focus should be used.",
					"default": "Line",
					"enum": ["Line"]
				},
				"scopefocus.linePadding": {
					"type": "number",
					"description": "How many extra lines should be in focus for line mode.",
					"default": 0,
					"minimum": 0
				},
				"scopefocus.opacity": {
					"type": "number",
					"description": "Opacity for out of focus lines. (0 - 1)",
					"default": 0.06,
					"minimum": 0,
					"maximum": 1
				}
			}
		},
		"keybindings": [
			{
				"command": "extension.focusSelection",
				"key": "alt+d",
				"mac": "ctrl+d"
			},
			{
				"command": "extension.toggle",
				"key": "alt+f",
				"mac": "ctrl+f"
			},
			{
				"command": "extension.defocusSelection",
				"key": "alt+x",
				"mac": "ctrl+x"
			},
			{
				"command": "extension.defocusAll",
				"key": "alt+backspace",
				"mac": "ctrl+"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.38.0",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"tslint": "^5.20.0",
		"typescript": "^3.6.3",
		"vscode-test": "^1.2.0"
	}
}
